<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="@dimen/space_1"
    android:layout_marginRight="@dimen/space_1"
    android:layout_marginTop="@dimen/space_1"
    android:layout_marginBottom="@dimen/space_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageButton
            android:background="@null"
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_marginRight="@dimen/space_3"
            android:src="@drawable/ic_minus"
            android:textAlignment="center" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="fill_parent"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/space_1"
            android:layout_marginBottom="@dimen/space_1"
            android:layout_toRightOf="@+id/btn_minus"
            android:layout_toEndOf="@+id/btn_minus" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_mini_3"
                android:text=""
                android:textAlignment="center" />
        </LinearLayout>

        <View
            android:layout_width="0.7dp"
            android:layout_height="fill_parent"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/space_1"
            android:layout_marginBottom="@dimen/space_1"
            android:layout_toLeftOf="@+id/btn_plus"
            android:layout_centerVertical="true"
            android:id="@+id/view" />

        <ImageButton
            android:background="@null"
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_3"
            android:layout_marginLeft="@dimen/space_3"
            android:src="@drawable/ic_add"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>